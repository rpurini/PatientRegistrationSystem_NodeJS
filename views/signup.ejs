  <html>
  

<form class="form-horizontal col-lg-offset-4" method='POST' action='/users/signup'>
  <fieldset>
    <strong>User Signup</strong>
    <div class="form-group">
      
      <div class="col-lg-5">
        <input class="form-control" name="firstname" id="inputEmail" autofocus required placeholder="First Name" type="text">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-5">
        <input class="form-control" name="lastname" id="inputEmail" required placeholder="Last Name" type="text">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-5">
        <input class="form-control" name="email" id="inputEmail" required  placeholder="Email" type="email">
      </div>
    </div>
    <div class="form-group">
      
      <div class="col-lg-5">
        <input class="form-control" name="password" id="inputPassword" required  placeholder="Password" type="password"> 
       </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-0"></br>        
        <button type="reset" class="btn btn-default">Reset</button>
        <button type="submit" class="btn btn-success">Sign Up</button>
        <a class="btn btn-primary" href="/users/login">Sign In</a>
      </div>
    </div>
  </fieldset>
</form>
</html>