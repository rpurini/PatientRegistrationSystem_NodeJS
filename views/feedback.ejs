<% include layout %>
<head>
   <style>
     .strong1{
     	font-size: 25;
     	font-style: italic ;
     	text-decoration: underline;
     }
    
   </style>
</head>
<body>
  <div>
    <form  class="form-horizontal col-lg-offset-4" method='POST' action='/users/feedback'>
  <fieldset >
    <strong class="strong1 col-lg-offset-2">Feedback</strong>
    <div class="form-group">


    <div class="form-group">
      <div class="col-lg-6">
        <input class="form-control" name="name" id="inputFirstName" autofocus required placeholder="Full Name" type="text">
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-6">
        <select class="form-control" required name="regarding">
          <option value="#">Regarding..</option>
          <option value="Service">Services</option>
    		  <option value="Doctor">Consultant Doctor</option>
          <option value="Doctor">Staff</option>
    		  <option value="Website">Website</option>
    		  <option value="Others">Others</option>
        </select>   
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-0"></br>
        <textarea name='comments' placeholder="Your Comments.."></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-0"></br>
        Rating:<input type="radio" name="rating" value="1" > * 
          <input type="radio" name="rating" value="2" > **
          <input type="radio" name="rating" value="3" > *** 
          <input type="radio" name="rating" value="4" > **** 
          <input type="radio" name="rating" value="5" > *****<br>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-0"></br>
        <button type="reset" class="btn btn-default">Reset</button>
        <button type="submit" class="btn btn-primary">Submit</button>
        
      </div>
    </div>
  </fieldset>
</form>

  </div>

</body>