<form class="form-horizontal col-lg-offset-4" method="POST", action="/users/login">
  <fieldset>
    <strong>User Login</strong>
    <div class="form-group">
      <div class="col-lg-5">
        <input class="form-control" id="inputEmail" name="email" autofocus required placeholder="Email" type="email">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-5">
        <input class="form-control" id="inputPassword" name="password" required placeholder="Password" type="password">  <br>   
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-0">
        <button type="reset" class="btn btn-default">Reset</button>
        <button type="submit" class="btn btn-primary">Sign In</button> &nbsp Or <a class="btn btn-success" href="/users/signup">Sign Up</a>
      </div>
    </div>
  </fieldset>
</form>